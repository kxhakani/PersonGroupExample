<Window x:Class="PersonGroupExample.StartupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PersonGroupExample"
        mc:Ignorable="d"
        Title="StartupWindow" Height="300" Width="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <Button Name="btnTestSystem" Content="Identify Person" Grid.Column="0" Grid.Row="1" Click="btnTestSystem_Click" HorizontalAlignment="Center" Width="150"/>
        <Button Name="btnCreateGroupsPerson" Content="Create Person" Grid.Column="0" Grid.Row="2" Click="btnCreateGroupsPerson_Click" HorizontalAlignment="Center" Width="150"/>
        <Button Name="btnLoginForm" Content="Login" Grid.Column="0" Grid.Row="3" Click="btnLoginForm_Click"  HorizontalAlignment="Center" Width="150"/>
    </Grid>
</Window>
