<Window x:Class="FaceTutorial.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="700" Width="960">
    <Grid x:Name="BackPanel">
        <Image x:Name="FacePhoto" Stretch="Uniform" Margin="0,0,0,50" MouseMove="FacePhoto_MouseMove" />
        <DockPanel DockPanel.Dock="Bottom">            
            <Button x:Name="openForm" VerticalAlignment="Bottom" HorizontalAlignment="Left" Content="Back"
                    Width="100" Click="openForm_Click"/>
            <ComboBox x:Name="comboBoxGroups" VerticalAlignment="Bottom" HorizontalAlignment="Right"  Width="200" Margin="0,0,50,0" />
            <Button x:Name="TestButton" VerticalAlignment="Bottom" HorizontalAlignment ="Right" Width="100"
                    Content="Test..."
                    Click="TestButton_Click" />
        </DockPanel>
    </Grid>
</Window>